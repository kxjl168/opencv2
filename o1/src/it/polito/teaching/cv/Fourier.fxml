<?xml version="1.0" encoding="UTF-8"?>
	
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="it.polito.teaching.cv.FourierController">
	<top>
		<VBox>
			<HBox alignment="CENTER" spacing="10.0">
				<padding>
					<Insets bottom="10.0" top="10.0" />
				</padding>

				<Label text="Canny Threshold" />
				<Slider fx:id="threshold" disable="false" />
				<Label text="s2" />
					<Slider fx:id="threshold2" min="0" max="255" value="1" blockIncrement="1" disable="false" />
						<Label text="s3" />
					<Slider fx:id="threshold3" min="0" max="255" value="20" blockIncrement="1" disable="false" />
						<Label text="s4" />
					<Slider fx:id="threshold4" min="0" max="255" value="20" blockIncrement="1" disable="false" />
			</HBox>
			<Separator />
			<HBox alignment="CENTER" spacing="10.0">

			</HBox>
			<Separator />
	<Label fx:id="hsvCurrentValues" />
		</VBox>
		
		
	</top>
	
	<center>
	
	<ScrollPane >
	<BorderPane >
	<left>
		<VBox alignment="CENTER">
			<padding>
				<Insets right="10" left="10" />
			</padding>
			<ImageView fx:id="originalImage" fitWidth="300" />
			<VBox alignment="CENTER" spacing="10">
			<padding>
				<Insets right="10" left="10" />
			</padding>
		
			<Label text="Hue Start" />
			<Slider fx:id="hueStart" min="0" max="180" value="0" blockIncrement="1" />
			<Label text="Hue Stop" />
			<Slider fx:id="hueStop" min="0" max="180" value="149" blockIncrement="1" />
			<Label text="Saturation Start" />
			<Slider fx:id="saturationStart" min="0" max="255" value="60" blockIncrement="1" />
			<Label text="Saturation Stop" />
			<Slider fx:id="saturationStop" min="0" max="255" value="200" blockIncrement="1" />
			<Label text="Value Start" />
			<Slider fx:id="valueStart" min="0" max="255" value="50" blockIncrement="1" />
			<Label text="Value Stop" />
			<Slider fx:id="valueStop" min="0" max="255" value="255" blockIncrement="1" />
		</VBox>
		</VBox>
		
	</left>
	<center>
	<VBox alignment="CENTER" spacing="10" >
			<padding>
				<Insets right="10" left="10" />
			</padding>
			
			<VBox alignment="CENTER">
				<ImageView fx:id="transformedImage"   fitWidth="400" />
						
			</VBox>
			
			<VBox alignment="BOTTOM_CENTER" spacing="5">
					<TextArea  fx:id="txtinfo"  ></TextArea>
			</VBox>
		
	</VBox>
	</center>
	<right >
		<VBox visible="false" alignment="CENTER" spacing="10">
			<padding>
				<Insets right="10" left="10" />
			</padding>
			<VBox alignment="TOP_CENTER" spacing="5">
			<ImageView fx:id="antitransformedImage" />
			</VBox>
			
			<VBox alignment="BOTTOM_CENTER" spacing="5">
					<ImageView fx:id="maskImage"   />
			</VBox>
			
			
			
		
		</VBox>
	</right>
	</BorderPane>
	
	</ScrollPane>
</center>
	
	<bottom>
		<HBox alignment="CENTER" spacing="10">
			<padding>
				<Insets top="25" right="25" bottom="25" left="25" />
			</padding>
			<Button alignment="center" text="选择图片"
				onAction="#loadImage" />
			<Button fx:id="transformButton" alignment="center"
				text="doBackgroundRemovalAbsDiff" onAction="#doBackgroundRemovalAbsDiff"
				disable="false" />
			<Button fx:id="antitransformButton" alignment="center"
				text="移除背景" onAction="#doBackgroundRemoval"
				disable="false" />
			<Button fx:id="doCannyBtn" alignment="center"
				text="边缘像素化" onAction="#doCanny" />
			<Button  alignment="center"
				text="识别图表-线段-并切割图片" onAction="#rage" />
					
					
					<Button  alignment="center"
				text="人脸识别l" onAction="#faceDetect1" />
					<Button  alignment="center"
				text="全身识别" onAction="#faceDetect_body" />
			<Button  alignment="center"
				text="人脸识别lbp" onAction="#faceDetect_lbp" />	
				<Button  alignment="center"
				text="合并" onAction="#hebing" />
				
				
				
				<Button  alignment="center"
				text="身份证识别" onAction="#ocrTest" />
				
					<Button  alignment="center"
				text="驾驶证识别" onAction="#ocrJashizhengTest" />
				
					
					<Button  alignment="center"
				text="网约车证识别" onAction="#ocrWycheTest" />
		</HBox>
	</bottom>
</BorderPane>
